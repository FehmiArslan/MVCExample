@model _01_ViewModel.Models.ProductListViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div>
         <a href="/Product/New" class="badge badge-primary">Yeni Ekle</a>
    </div>
    @if (Model.Products.Count == 0)
    {
        <div class="alert alert-dark" role="alert">
            Henüz ürün bulunmamakdır.
        </div>

    }
    else
    {
        <table class="table table-dark">
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Açıklama</th>
                <th>Kategori</th>
                <th>Fiyat</th>
                <th></th>
                <th></th>
            </tr>

            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Desription</td>
                    <td>@item.Category.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <ul>
                            @foreach (var patlangac in item.Patlangacs)
                            {
                                <li>@patlangac.Name</li>
                            }
                        </ul>

                    </td>
                    <td>
                        <a href="/Product/Edit/@item.Id">Güncelle</a>
                        <a href="/Product/Delete?productid=@item.Id&name=@item.Name">Sil</a>

                    </td>
                </tr>
            }


        </table>

    }

</div>